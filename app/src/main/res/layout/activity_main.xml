<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="40dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="179dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="36dp"
            android:layout_toStartOf="@+id/imageView"
            android:text="POWER MECH"
            android:textSize="24sp"
            android:textStyle="bold" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView"
            android:layout_width="114dp"
            android:layout_height="85dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/login" />

        <TextView
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="171dp"
            android:layout_marginBottom="4dp"
            android:text="COAL PARAMETERS" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COAL/VESSEL :" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TM :" />

        <EditText
            android:id="@+id/et_tm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="TM"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IM :"/>
    <EditText
        android:id="@+id/et_im"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IM"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASH :"/>
    <EditText
        android:id="@+id/et_ash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ASH"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_fourth_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_fourth_input_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hadb / Hdb / Hdaf"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Harb Value"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear All" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="developed by aakash"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />



</LinearLayout>